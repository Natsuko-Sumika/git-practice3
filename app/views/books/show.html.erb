
<div class='row'>
<%= render 'layouts/newbook', user: @book.user %>
  <div class='col-md-8 offset-md-1'>
    <h2>Book detail</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
        <td>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg" %>
          <br>
          <%= link_to "/users/#{@book.user.id}" do %>
          <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to "/books/#{@book.id}" do %>
          <%= @book.title %>
          <% end %>
        </td>
        <td><%= @book.body %></td>
        
        <% if @user.id == current_user.id %>
        <td><%= link_to "Edit", "/books/#{@book.id}/edit", class: "btn btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger", method: :delete %></td>
        <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>